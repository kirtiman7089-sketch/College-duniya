<% layout('layouts/boilerplate') %>
<%- include('../partials/navbar') %>
<%- include('../partials/flash') %>

<div class="container mt-4">
  <div class="row">
    <!-- Product Details Column -->
    <div class="col-lg-6">
      <div class="card">
        <img src="<%=foundProduct.img%>" class="card-img-top" alt="Product Image">
        <div class="card-body">
          <h2 class="card-title"><%=foundProduct.name%></h2>
          <h5 class="card-title">
            <span>&#8377;</span>
            <%= foundProduct.price %></h5>
          <p class="card-text"><%= foundProduct.desc %> </p>
          
          <% if(currentUser && currentUser.role === 'Seller'){%>
          <a href="/products/<%=foundProduct._id%>/edit" class="btn btn-primary">Edit</a>
          <%}%>
          
          <form method="POST" action="/user/<%=foundProduct._id%>/add" class="d-inline-block">
            <button class="btn btn-primary">Add to cart</button>
          </form>
        </div>
      </div>
    </div>

    <!-- Author Details Column -->
    <% if(author){ %>
    <div class="col-lg-6">
      <div class="card author-card">
        <div class="card-body">
          <h2 class="card-title text-center">Author Details</h2>
          <p class="card-text">Name: <%=author.username%></p>
          <p class="card-text">Email: <%=author.email%></p>
          <p class="card-text">Contact Number: <%=author.Mobile%></p>
          <!-- Add more author details here if needed -->
        </div>
      </div>
    </div>
    <% } %>
  </div>
</div>

<%- include('../partials/footer') %>

<!-- Custom CSS -->
<style>
  .author-card {
    margin-top: 50px; /* Adjust as needed */
  }
</style>
