<% layout('layouts/boilerplate') %>
<%- include('../partials/navbar') %>

<div class="container">
     <form  action="/products/<%=foundProduct._id%>?_method=PATCH" method="POST">
       <div>
        <label for="name" class="form-label">Enter Name of Product</label>
        <input id="name" name="name" type="text" value="<%=foundProduct.name%>" placeholder="Name of Product" class="form-control">
       </div>
       <br>
       <div>
        <label for="img" class="form-label">Enter Name the URL</label>
        <input id="img" name="img" type="text" placeholder="URL of the Image" value="<%=foundProduct.img%>" class="form-control">
       </div>
       <br>
       <div>
        <label for="price" class="form-label">Enter price of Product</label>
        <input id="price" name="price" type="number" placeholder="Price of product" value ="<%=foundProduct.price%>"class="form-control">
       </div>
       <br> 
       <div>
        <label for="desc" class="form-label">Enter Description</label>
        <textarea id="desc" name="desc"  placeholder="Write your product description"class="form-control"><%=foundProduct.desc%>
        </textarea>
       </div>
       <br>
        <button type="submit"> Edit Product</button>
     </form>

</div>
</body>
</html>